<div class="col-xs-8 col-xs-offset-2">
  <h1>
    <% unless @note.active? %>
      <i title="User is an admin" class="fa fa-hourglass-half"></i>
    <% end %>
    Title: <%= @note.title %>
  </h1>
</div>

<div class="well col-xs-8 col-xs-offset-2">
  <h4>Description:</h4>
  <hr>
  <%= simple_format(@note.description) %>
  <%= render partial: 'controls', locals: { note: @note } %>
</div>

<div class="col-xs-8 col-xs-offset-2">
  <%= link_to 'Back', root_path, class: "btn btn-xs btn-success" %>
</div>