<% if note.owned_by?(current_user) || logged_in_as_admin? %>
  <div class="note-actions">
    <%= link_to "Edit", edit_note_path(note), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete", note_path(note), method: :delete, data: { confirm: "Are you sure you want to delete this note?"}, class: "btn btn-xs btn-danger" %>
  </div>
<% end %>