<% obj.each do |note| %>
  <ul class="note">
    <div class="row">
      <div class="well col-md-8 col-md-offset-2">
        <li class="note-title">
          <%= link_to note.title, note_path(note) %>
        </li>
        <div class="note-body">
        <%= truncate(note.description, length: 100) %>
        <div class="note-meta-details">
          <small>Created by: <%= note.user.username if note.user %>,
            <%= time_ago_in_words(note.created_at) %> ago, last updated: <%= time_ago_in_words(note.updated_at) %> ago</small>
        </div>
        <%= render partial: 'controls', locals: { note: note } %>
      </div>
    </div>
  </ul>
<% end %>