<%= render partial: 'shared/errors', locals: { obj: @user } %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, html: {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>

    <% if logged_in_as_admin? %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label 'Account type' %><br>
        </div>
        <div class="col-sm-8">
          <%= f.select :is_admin, [ ['team_member', false], ['admin', true] ] %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit(!logged_in? ? "Signup" : 
              @user.new_record?  ? "Create" : "Update account", class: 'btn btn-primary btn-large') %>
        <%= link_to 'Cancel', users_path, class: "btn btn-cancel btn-danger" %>
      </div>
    </div>
    <% end %>
  </div>
</div>