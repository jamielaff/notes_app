<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h1>Log in</h1>
    <%= form_tag '/login' do %>
      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= label_tag :username%>
        </div>
        <div class="col-sm-11">
          <%= text_field_tag :username, "", class: 'form-control', placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= label_tag :password%>
        </div>
        <div class="col-sm-11">
          <%= password_field_tag :password, "", class: 'form-control', placeholder: "Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= submit_tag 'Log in', class: 'btn btn-success btn-large' %>
        </div>
      </div>
    <% end %>
  </div>
</div>